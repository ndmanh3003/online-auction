<h1>Product Details</h1>

<div class="Product-detail">
    <div class="Product-info">
        <h2>Product #{{Product.id}}</h2>
        <p><strong>Date:</strong> {{Product.created_at}}</p>
        <p><strong>Status:</strong> <span class="status status-{{Product.status}}">{{Product.status}}</span></p>
        <p><strong>Total:</strong> {{formatPrice Product.total_amount}}</p>
    </div>
    
    <div class="shipping-info">
        <h3>Shipping Address</h3>
        <p>{{Product.shipping_address}}</p>
    </div>
    
    <div class="Product-items">
        <h3>Items</h3>
        <table class="Product-table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                {{#each Product.items}}
                <tr>
                    <td>
                        <div class="product-cell">
                            <img src="{{image_url}}" alt="{{product_name}}">
                            <span>{{product_name}}</span>
                        </div>
                    </td>
                    <td>{{formatPrice price}}</td>
                    <td>{{quantity}}</td>
                    <td>{{formatPrice (multiply price quantity)}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<a href="/Products" class="btn btn-secondary">Back to Products</a>
