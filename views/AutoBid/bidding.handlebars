<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
    <h1>My Products</h1>
    <a href="/my-products/new" class="btn btn-primary">Sell New Product</a>
</div>

{{#if products.length}}
    <div class="products-grid">
        {{#each products}}
        <div class="product-card">
            <img src="{{image_url}}" alt="{{name}}">
            <h3>{{name}}</h3>
            <p class="price">{{formatPrice price}}</p>
            <p style="padding: 0 1rem; color: #7f8c8d;">Stock: {{stock}}</p>
            <p style="padding: 0 1rem; color: #7f8c8d;">Status: {{status}}</p>
            <div style="display: flex; gap: 0.5rem; padding: 1rem;">
                <a href="/my-products/{{id}}/edit" class="btn btn-sm">Edit</a>
                <form method="POST" action="/my-products/{{id}}/delete" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
{{else}}
    <div class="empty-cart">
        <h2>You haven't listed any products yet</h2>
        <p>Start selling by adding your first product!</p>
        <a href="/my-products/new" class="btn btn-primary">Sell Your First Product</a>
    </div>
{{/if}}
