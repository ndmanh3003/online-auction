              class="bg-white rounded-3xl border border-gray-200/60 overflow-hidden hover:scale-105 transition-all duration-300 ease-out flex-none w-[calc(33.333%-16px)]"
            >
              <img
                src="{{images.[0]}}"
                alt="{{name}}"
                class="w-full h-48 object-cover"
              />
              <div class="p-4">
                <h3 class="text-gray-900 font-semibold mb-2 truncate">{{name}}</h3>
