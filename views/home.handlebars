    {{#if highestPrice.length}}
      <div class="relative">
        <div
          id="carousel-highest-price"
          class="flex gap-6 scrollbar-hide scroll-smooth overflow-x-auto py-2"
          style="scrollbar-width: none; -ms-overflow-style: none;"
        >
          {{#each highestPrice}}
            <a
