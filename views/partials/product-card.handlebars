<div
  class='bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 overflow-hidden hover:scale-105 transition-all duration-300 ease-out'
>
  <a href='/products/{{_id}}'>
    <img src='{{images.0}}' alt='{{name}}' class='w-full h-48 object-cover' />
  </a>
  <div class='p-4'>
    <a href='/products/{{_id}}' class='block'>
      <h3 class='text-gray-900 font-semibold mb-2 truncate'>{{name}}</h3>
    </a>
    <p class='text-gray-600 text-sm mb-2'>{{categoryId.name}}</p>
    <p class='text-blue-600 font-bold text-lg'>${{format_currency
        currentPrice
      }}</p>
    <div class='flex justify-between items-center mt-2 text-sm text-gray-500'>
      <span>{{bidCount}} bids</span>
      <span>{{formatDate endTime}}</span>
    </div>
  </div>
</div>