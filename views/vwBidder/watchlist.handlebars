<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-[36px] font-semibold text-gray-900">My Watchlist</h1>
  </div>
  {{#if items.length}}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      {{#each items}}
        {{#if productId}}
          <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 overflow-hidden hover:scale-105 transition-all duration-300 ease-out">
            <a href="/products/{{productId._id}}">
              <img
                src="{{productId.images.[0]}}"
                alt="{{productId.name}}"
                class="w-full h-56 object-cover"
              />
            </a>
            <div class="p-6">
              <a href="/products/{{productId._id}}" class="block">
                <h3 class="text-gray-900 font-semibold text-lg mb-2 truncate">{{productId.name}}</h3>
              </a>
              <a href="/products?categoryId={{productId.categoryId._id}}" class="text-gray-600 text-sm hover:underline">
                {{productId.categoryId.name}}
              </a>
              <div class="mt-4 space-y-2">
                <div class="flex justify-between items-center">
                  <span class="text-gray-600 text-sm">Current Price:</span>
                  <span class="text-blue-600 font-bold text-lg">${{format_currency productId.currentPrice}}</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-gray-600 text-sm">Ends:</span>
                  <span class="text-gray-900 font-medium">{{formatDate productId.endTime}}</span>
                </div>
              </div>
              <div class="mt-4 flex gap-2">
                <a
                  href="/products/{{productId._id}}"
                  class="flex-1 text-center px-4 py-3 bg-blue-600 text-white rounded-xl shadow-[0_4px_20px_rgba(37,99,235,0.3)] hover:bg-blue-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium"
                >
                  View
                </a>
                <form
                  method="post"
                  action="/bidder/watchlist/{{productId._id}}"
                  class="flex-1"
                >
                  <input type="hidden" name="_method" value="DELETE">
                  <button
                    type="submit"
                    class="w-full px-4 py-3 bg-red-600 text-white rounded-xl shadow-[0_4px_20px_rgba(239,68,68,0.3)] hover:bg-red-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium"
                  >
                    Remove
                  </button>
                </form>
              </div>
            </div>
          </div>
        {{/if}}
      {{/each}}
    </div>
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-6">
      {{{pagination pagination.page pagination.totalPages pagination.total}}}
    </div>
  {{else}}
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-12 text-center">
      <i class="fas fa-heart text-gray-400 text-6xl mb-4"></i>
      <p class="text-gray-600 text-lg">Your watchlist is empty.</p>
      <a
        href="/products"
        class="inline-block mt-4 px-6 py-3 bg-blue-600 text-white rounded-xl shadow-[0_4px_20px_rgba(37,99,235,0.3)] hover:bg-blue-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium"
      >
        Browse Products
      </a>
    </div>
  {{/if}}
</div>

