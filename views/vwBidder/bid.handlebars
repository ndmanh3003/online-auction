<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-[36px] font-semibold text-gray-900 mb-2">Place a Bid</h1>
    <p class="text-gray-600">{{product.name}}</p>
    <a
      href="/products/{{product._id}}"
      class="text-blue-600 hover:underline mt-2 inline-block"
    >
      ‚Üê Back to Product
    </a>
  </div>
  <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-8">
    <div class="mb-6 p-6 bg-blue-50 rounded-2xl">
      <div class="space-y-2">
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Current Price:</span>
          <span class="text-blue-600 font-bold text-2xl">${{format_currency product.currentPrice}}</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Step Price:</span>
          <span class="text-gray-900 font-semibold">${{format_currency product.stepPrice}}</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Minimum Bid:</span>
          <span class="text-green-600 font-bold text-xl">${{format_currency minBidAmount}}</span>
        </div>
      </div>
    </div>
    <form
      method="post"
      action="/bidder/bid/{{product._id}}"
      class="space-y-6"
    >
      <div class="relative mb-6">
        <label for="bidAmount" class="block text-sm font-medium text-gray-900 mb-2">Bid Amount ($)</label>
        <input
          type="number"
          id="bidAmount"
          name="bidAmount"
          min="{{minBidAmount}}"
          step="{{product.stepPrice}}"
          class="w-full px-4 py-4 border border-gray-200/60 rounded-2xl focus:ring-2 focus:ring-black/10 focus:outline-none transition-all duration-300 text-gray-900"
          placeholder="Enter your bid amount"
          required
          autofocus
        />
        <p class="text-gray-500 text-sm mt-2">Minimum bid: ${{format_currency minBidAmount}}</p>
      </div>
      <div class="relative mb-6">
        <label for="maxBidAmount" class="block text-sm font-medium text-gray-900 mb-2">Maximum Auto-Bid Amount (Optional)</label>
        <input
          type="number"
          id="maxBidAmount"
          name="maxBidAmount"
          min="{{minBidAmount}}"
          step="{{product.stepPrice}}"
          class="w-full px-4 py-4 border border-gray-200/60 rounded-2xl focus:ring-2 focus:ring-black/10 focus:outline-none transition-all duration-300 text-gray-900"
          placeholder="Enter maximum auto-bid amount (optional)"
        />
        <p class="text-gray-500 text-sm mt-2">System will automatically bid up to this amount for you</p>
      </div>
      <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-2xl">
        <p class="text-gray-700 text-sm">
          <strong>Note:</strong> By placing a bid, you agree to purchase this item if you win the auction.
          {{#if product.autoExtend}}
          This auction has auto-extend enabled - bids placed near the end time will extend the auction.
          {{/if}}
        </p>
      </div>
      <button
        type="submit"
        class="w-full px-6 py-4 bg-blue-600 text-white rounded-xl shadow-[0_4px_20px_rgba(37,99,235,0.3)] hover:bg-blue-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium"
      >
        Place Bid
      </button>
    </form>
  </div>
</div>

