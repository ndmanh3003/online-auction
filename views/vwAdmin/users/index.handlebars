{{#> admin-management-layout activeMenu='users'}}
<div class="mb-8">
  <h1 class="text-[36px] font-semibold text-gray-900">User Management</h1>
</div>
{{#if items.length}}
<div
  class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 overflow-hidden"
>
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead>
        <tr class="border-b border-gray-200">
          <th class="text-left py-4 px-4 text-gray-900 font-semibold">Name</th>
          <th class="text-left py-4 px-4 text-gray-900 font-semibold">Email</th>
          <th class="text-left py-4 px-4 text-gray-900 font-semibold">
            Status
          </th>
          <th class="text-left py-4 px-4 text-gray-900 font-semibold">
            Seller Expires At
          </th>
          <th class="text-left py-4 px-4 text-gray-900 font-semibold">
            Rating
          </th>
          <th class="text-left py-4 px-4 text-gray-900 font-semibold">
            Created At
          </th>
          <th class="text-left py-4 px-4 text-gray-900 font-semibold">
            Actions
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
        <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
          <td class="py-4 px-4 text-gray-900 font-medium">{{name}}</td>
          <td class="py-4 px-4 text-gray-600">{{email}}</td>
          <td class="py-4 px-4">
            {{#if (eq role 'admin')}}
            <span
              class="inline-block px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800"
            >
              Admin
            </span>
            {{else if sellerExpiresAt}} {{#if (gt sellerExpiresAt (now))}}
            <span
              class="inline-block px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800"
            >
              Seller (Active)
            </span>
            {{else}}
            <span
              class="inline-block px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800"
            >
              Seller (Expired)
            </span>
            {{/if}} {{else}}
            <span
              class="inline-block px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800"
            >
              Bidder
            </span>
            {{/if}}
          </td>
          <td class="py-4 px-4 text-gray-600">
            {{#if sellerExpiresAt}} {{formatDate sellerExpiresAt}} {{else}}
            <span class="text-gray-400">-</span>
            {{/if}}
          </td>
          <td class="py-4 px-4">
            <div class="flex items-center gap-4 mb-2">
              <div class="flex items-center gap-2">
                <i class="fas fa-star text-yellow-500 text-lg"></i>
                <span class="text-gray-900 font-bold text-xl"
                  >{{#if (gt ratingStats.total 0)}}{{roundPercent
                  ratingStats.percent}}%{{else}}0%{{/if}}</span
                >
              </div>
              <div class="text-sm text-gray-600">
                <span class="text-green-600 font-semibold"
                  >{{ratingStats.positive}}</span
                >
                /
                <span class="text-red-600 font-semibold"
                  >{{ratingStats.negative}}</span
                >
                ({{ratingStats.total}} total)
              </div>
            </div>
            {{#if (gt ratingStats.total 0)}}
            <button
              onclick="openRatingModal('{{_id}}', '{{name}}')"
              class="text-blue-600 hover:underline text-sm"
            >
              View all ratings â†’
            </button>
            {{else}}
            <div class="text-gray-500 text-sm">No ratings yet</div>
            {{/if}}
          </td>
          <td class="py-4 px-4 text-gray-600">{{formatDate createdAt}}</td>
          <td class="py-4 px-4">
            <button
              onclick="openEditModal('{{_id}}', '{{name}}', '{{email}}', '{{role}}')"
              class="mr-2 px-4 py-2 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition-colors font-medium text-sm"
            >
              Edit
            </button>
            {{#unless (eq role 'admin')}}
            <form
              method="post"
              action="/admin/users/{{_id}}"
              class="inline"
              onsubmit="return confirm('Are you sure you want to delete this user?');"
            >
              <input type="hidden" name="_method" value="DELETE" />
              <button
                type="submit"
                class="px-4 py-2 bg-red-600 text-white rounded-xl hover:bg-red-700 transition-colors font-medium text-sm"
              >
                Delete
              </button>
            </form>
            {{/unless}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="p-6">
    {{{pagination pagination.page pagination.totalPages pagination.total}}}
  </div>
</div>
{{else}}
<div
  class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-12 text-center"
>
  <p class="text-gray-600 text-lg">No users found.</p>
</div>
{{/if}} {{> rating/rating-history-modal
  modalId="ratingModal"
  title="Rating History"
  userId=""
  userName=""
}} {{!-- Edit User Modal --}}
<div
  id="editUserModal"
  class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50"
  onclick="if(event.target === this) this.classList.add('hidden')"
>
  <div
    class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.15)] border border-gray-200/60 w-full max-w-2xl max-h-[90vh] overflow-hidden flex flex-col"
    onclick="event.stopPropagation()"
  >
    <div class="p-6 border-b border-gray-200 flex items-center justify-between">
      <h2 class="text-[24px] font-semibold text-gray-900">Edit User</h2>
      <button
        onclick="document.getElementById('editUserModal').classList.add('hidden')"
        class="text-gray-400 hover:text-gray-600 transition-colors"
      >
        <i class="fas fa-times text-xl"></i>
      </button>
    </div>
    <div class="flex-1 overflow-y-auto p-6">
      <form method="post" id="editUserForm" class="space-y-6">
        <input type="hidden" name="_method" value="PUT" />
        <input type="hidden" id="editUserId" name="userId" />
        <div>
          <label
            for="editUserName"
            class="block text-sm font-medium text-gray-900 mb-2"
            >Name</label
          >
          <input
            type="text"
            id="editUserName"
            name="name"
            class="w-full px-4 py-4 border border-gray-200/60 rounded-2xl focus:ring-2 focus:ring-black/10 focus:outline-none transition-all duration-300 text-gray-900"
            required
          />
        </div>
        <div>
          <label
            for="editUserEmail"
            class="block text-sm font-medium text-gray-900 mb-2"
            >Email</label
          >
          <input
            type="email"
            id="editUserEmail"
            name="email"
            class="w-full px-4 py-4 border border-gray-200/60 rounded-2xl focus:ring-2 focus:ring-black/10 focus:outline-none transition-all duration-300 text-gray-900"
            required
          />
        </div>
        <div>
          <label
            for="editUserRole"
            class="block text-sm font-medium text-gray-900 mb-2"
            >Role</label
          >
          <select
            id="editUserRole"
            name="role"
            class="w-full px-4 py-4 border border-gray-200/60 rounded-2xl focus:ring-2 focus:ring-black/10 focus:outline-none transition-all duration-300 text-gray-900 bg-white"
            required
          >
            <option value="bidder">Bidder</option>
            <option value="seller">Seller</option>
            <option value="admin">Admin</option>
          </select>
        </div>
        <div class="flex gap-4">
          <button
            type="submit"
            class="flex-1 px-6 py-4 bg-blue-600 text-white rounded-xl shadow-[0_4px_20px_rgba(37,99,235,0.3)] hover:bg-blue-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium"
          >
            Update User
          </button>
          <button
            type="button"
            onclick="document.getElementById('editUserModal').classList.add('hidden')"
            class="flex-1 px-6 py-4 bg-white text-gray-900 border border-gray-200 rounded-xl hover:bg-gray-50 transition-colors font-medium"
          >
            Cancel
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  window.openRatingModal = function (userId, userName) {
    if (window['openRatingModal_ratingModal']) {
      window['openRatingModal_ratingModal'](userId, userName)
    }
  }

  function openEditModal(userId, name, email, role) {
    document.getElementById('editUserId').value = userId
    document.getElementById('editUserName').value = name
    document.getElementById('editUserEmail').value = email
    document.getElementById('editUserRole').value = role
    document.getElementById('editUserForm').action = `/admin/users/${userId}`
    document.getElementById('editUserModal').classList.remove('hidden')
  }
</script>
{{/admin-management-layout}}
