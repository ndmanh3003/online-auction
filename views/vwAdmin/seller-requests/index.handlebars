{{#> admin-management-layout activeMenu='seller-requests'}}
  <div class="mb-8">
    <h1 class="text-[36px] font-semibold text-gray-900 mb-4">Seller Requests</h1>
    <form method="get" action="/admin/seller-requests" class="flex items-center gap-2">
      <select
        name="status"
        class="px-4 py-2 border border-gray-200/60 rounded-xl focus:ring-2 focus:ring-black/10 focus:outline-none transition-all duration-300 text-gray-900 bg-white"
        onchange="this.form.submit()"
      >
        <option value="" {{#unless selectedStatus}}selected{{/unless}}>All Status</option>
        <option value="pending" {{#if (eq selectedStatus 'pending')}}selected{{/if}}>Pending</option>
        <option value="approved" {{#if (eq selectedStatus 'approved')}}selected{{/if}}>Approved</option>
        <option value="denied" {{#if (eq selectedStatus 'denied')}}selected{{/if}}>Denied</option>
      </select>
    </form>
  </div>
  {{#if items.length}}
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Name</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Email</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Status</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Requested At</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each items}}
              <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
                <td class="py-4 px-4 text-gray-900">{{userId.name}}</td>
                <td class="py-4 px-4 text-gray-600">{{userId.email}}</td>
                <td class="py-4 px-4">
                  <span class="inline-block px-3 py-1 rounded-full text-xs font-medium {{#if (eq status 'pending')}}bg-yellow-100 text-yellow-800{{else if (eq status 'approved')}}bg-green-100 text-green-800{{else}}bg-red-100 text-red-800{{/if}}">
                    {{status}}
                  </span>
                </td>
                <td class="py-4 px-4 text-gray-600">{{formatDate createdAt}}</td>
                <td class="py-4 px-4">
                  {{#if (eq status 'pending')}}
                    <div class="flex gap-2">
                      <form
                        method="post"
                        action="/admin/seller-requests/{{_id}}/approve"
                        class="inline"
                      >
                        <button
                          type="submit"
                          class="px-4 py-2 bg-blue-600 text-white rounded-xl shadow-[0_4px_20px_rgba(37,99,235,0.3)] hover:bg-blue-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium text-sm"
                        >
                          Approve
                        </button>
                      </form>
                      <form
                        method="post"
                        action="/admin/seller-requests/{{_id}}/deny"
                        class="inline"
                      >
                        <button
                          type="submit"
                          class="px-4 py-2 bg-white border border-red-200/60 rounded-xl shadow-[0_4px_20px_rgba(239,68,68,0.15)] hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out text-red-900 font-medium text-sm"
                        >
                          Deny
                        </button>
                      </form>
                    </div>
                  {{else}}
                    <span class="text-gray-500 text-sm">{{#if (eq status 'approved')}}Processed{{else}}Rejected{{/if}}</span>
                  {{/if}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{#if pagination}}
        <div class="p-6">
          {{{pagination pagination.page pagination.totalPages pagination.total}}}
        </div>
      {{/if}}
    </div>
  {{else}}
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-12 text-center">
      <i class="fas fa-folder-open text-gray-400 text-6xl mb-4"></i>
      <p class="text-gray-600 text-lg">No items found.</p>
    </div>
  {{/if}}
{{/admin-management-layout}}