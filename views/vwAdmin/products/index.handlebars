{{#> admin-management-layout activeMenu='products'}}
  <div class="mb-8">
    <h1 class="text-[36px] font-semibold text-gray-900 mb-4">Product Management</h1>
    <form method="get" action="/admin/products" class="flex items-center gap-2">
      <select
        name="status"
        class="px-4 py-2 border border-gray-200/60 rounded-xl focus:ring-2 focus:ring-black/10 focus:outline-none transition-all duration-300 text-gray-900 bg-white"
        onchange="this.form.submit()"
      >
        <option value="" {{#unless selectedStatus}}selected{{/unless}}>All Status</option>
        <option value="active" {{#if (eq selectedStatus 'active')}}selected{{/if}}>Active</option>
        <option value="ended" {{#if (eq selectedStatus 'ended')}}selected{{/if}}>Ended</option>
        <option value="cancelled" {{#if (eq selectedStatus 'cancelled')}}selected{{/if}}>Cancelled</option>
      </select>
    </form>
  </div>
  {{#if items.length}}
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Image</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Product</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Seller</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Price</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Status</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each items}}
              <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
                <td class="py-4 px-4">
                  <img src="{{images.[0]}}" alt="{{name}}" class="w-16 h-16 object-cover rounded-xl">
                </td>
                <td class="py-4 px-4">
                  <p class="text-gray-900 font-medium">{{name}}</p>
                  <p class="text-gray-600 text-sm">{{categoryId.name}}</p>
                </td>
                <td class="py-4 px-4 text-gray-600">{{sellerId.name}}</td>
                <td class="py-4 px-4 text-blue-600 font-bold">${{format_currency currentPrice}}</td>
                <td class="py-4 px-4">
                  <span class="inline-block px-3 py-1 rounded-full text-xs font-medium {{#if (eq status 'active')}}bg-green-100 text-green-800{{else if (eq status 'ended')}}bg-gray-100 text-gray-800{{else}}bg-red-100 text-red-800{{/if}}">
                    {{status}}
                  </span>
                </td>
                <td class="py-4 px-4">
                  <a
                    href="/products/{{_id}}"
                    class="mr-2 px-4 py-2 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition-colors font-medium text-sm"
                  >
                    View
                  </a>
                  <form
                    method="post"
                    action="/admin/products/{{_id}}"
                    class="inline"
                    onsubmit="return confirm('Are you sure you want to delete this product?');"
                  >
                    <input type="hidden" name="_method" value="DELETE">
                    <button
                      type="submit"
                      class="px-4 py-2 bg-red-600 text-white rounded-xl hover:bg-red-700 transition-colors font-medium text-sm"
                    >
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class="p-6">
        {{{pagination pagination.page pagination.totalPages pagination.total}}}
      </div>
    </div>
  {{else}}
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-12 text-center">
      <p class="text-gray-600 text-lg">No products found.</p>
    </div>
  {{/if}}
{{/admin-management-layout}}

