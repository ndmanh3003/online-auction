{{#> admin-management-layout activeMenu='categories'}}
  <div class="mb-8">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-[36px] font-semibold text-gray-900">Categories</h1>
      <a
        href="/admin/categories/create"
        class="px-6 py-3 bg-blue-600 text-white rounded-xl shadow-[0_4px_20px_rgba(37,99,235,0.3)] hover:bg-blue-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium"
      >
        Add Category
      </a>
    </div>
    <div class="flex items-center gap-4">
      <label for="parentFilter" class="text-sm font-medium text-gray-700">Filter by Parent:</label>
      <form method="get" action="/admin/categories" class="flex items-center gap-2">
        <select
          id="parentFilter"
          name="parentId"
          class="px-4 py-2 border border-gray-200/60 rounded-xl focus:ring-2 focus:ring-black/10 focus:outline-none transition-all duration-300 text-gray-900 bg-white"
          onchange="this.form.submit()"
        >
          <option value="none" {{#if (eq req.query.parentId 'none')}}selected{{/if}}{{#unless req.query.parentId}}selected{{/unless}}>
            None (Parent Categories Only)
          </option>
          {{#each drpdwnParents}}
            <option value="{{value}}" {{#if (eq ../req.query.parentId value)}}selected{{/if}}>
              {{label}}
            </option>
          {{/each}}
        </select>
        <input type="hidden" name="page" value="1">
      </form>
    </div>
  </div>
  {{#if items.length}}
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Image</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Category Name</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Parent Category</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Description</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Created At</th>
              <th class="text-left py-4 px-4 text-gray-900 font-semibold">Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each items}}
              <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
                <td class="py-4 px-4">
                  <img src="{{img_url}}" alt="{{name}}" class="w-16 h-16 object-cover rounded-xl">
                </td>
                <td class="py-4 px-4">
                  <span class="text-gray-900 font-medium">{{name}}</span>
                </td>
                <td class="py-4 px-4">
                  {{#if parentId}}
                    <span class="text-gray-600">{{parentId.name}}</span>
                  {{else}}
                    <span class="text-gray-400 italic">-</span>
                  {{/if}}
                </td>
                <td class="py-4 px-4 text-gray-600">
                  {{#if description}}
                    <p class="max-w-md truncate">{{description}}</p>
                  {{else}}
                    <span class="text-gray-400">-</span>
                  {{/if}}
                </td>
                <td class="py-4 px-4 text-gray-600">{{formatDate createdAt}}</td>
                <td class="py-4 px-4">
                  <a
                    href="/admin/categories/{{_id}}/edit"
                    class="mr-2 px-4 py-2 bg-blue-600 text-white border border-blue-600 rounded-xl shadow-[0_4px_20px_rgba(59,130,246,0.3)] hover:bg-blue-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium text-sm whitespace-nowrap"
                  >
                    Edit
                  </a>
                  <form
                    method="post"
                    action="/admin/categories/{{_id}}"
                    class="inline"
                    onsubmit="return confirm('Are you sure you want to delete this category?');"
                  >
                    <input type="hidden" name="_method" value="DELETE">
                    <button
                      type="submit"
                      class="px-4 py-2 bg-red-600 text-white border border-red-600 rounded-xl shadow-[0_4px_20px_rgba(239,68,68,0.3)] hover:bg-red-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium text-sm whitespace-nowrap"
                    >
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{#if pagination}}
        <div class="p-6">
          {{{pagination pagination.page pagination.totalPages pagination.total}}}
        </div>
      {{/if}}
    </div>
  {{else}}
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-12 text-center">
      <i class="fas fa-folder-open text-gray-400 text-6xl mb-4"></i>
      <p class="text-gray-600 text-lg">No items found.</p>
    </div>
  {{/if}}
{{/admin-management-layout}}