<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-[36px] font-semibold text-gray-900 mb-4">Products</h1>
    <div class="flex items-center gap-4">
      <a
        href="/search"
        class="px-6 py-3 bg-blue-600 text-white rounded-xl shadow-[0_4px_20px_rgba(37,99,235,0.3)] hover:bg-blue-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium"
      >
        Search Products
      </a>
    </div>
  </div>
  {{#if items.length}}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      {{#each items}}
        <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 overflow-hidden hover:scale-105 transition-all duration-300 ease-out">
          <a href="/products/{{_id}}">
            <img
              src="{{images.[0]}}"
              alt="{{name}}"
              class="w-full h-56 object-cover"
            />
          </a>
          <div class="p-6">
            <a href="/products/{{_id}}" class="block">
              <h3 class="text-gray-900 font-semibold text-lg mb-2 truncate">{{name}}</h3>
            </a>
            <a href="/products?categoryId={{categoryId._id}}" class="text-gray-600 text-sm hover:underline">
              {{categoryId.name}}
            </a>
            <div class="mt-4 space-y-2">
              <div class="flex justify-between items-center">
                <span class="text-gray-600 text-sm">Current Price:</span>
                <span class="text-blue-600 font-bold text-lg">${{format_currency currentPrice}}</span>
              </div>
              {{#if buyNowPrice}}
                <div class="flex justify-between items-center">
                  <span class="text-gray-600 text-sm">Buy Now:</span>
                  <span class="text-green-600 font-semibold">${{format_currency buyNowPrice}}</span>
                </div>
              {{/if}}
              {{#if topBidder}}
                <div class="flex justify-between items-center">
                  <span class="text-gray-600 text-sm">Top Bidder:</span>
                  <span class="text-gray-900 font-medium">{{topBidder.name}}</span>
                </div>
              {{/if}}
              <div class="flex justify-between items-center">
                <span class="text-gray-600 text-sm">Bids:</span>
                <span class="text-gray-900 font-medium">{{bidCount}}</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600 text-sm">Ends:</span>
                <span class="text-gray-900 font-medium">{{formatDate endTime}}</span>
              </div>
            </div>
            <div class="mt-4">
              <a
                href="/products/{{_id}}"
                class="block w-full text-center px-4 py-3 bg-blue-600 text-white rounded-xl shadow-[0_4px_20px_rgba(37,99,235,0.3)] hover:bg-blue-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium"
              >
                View Details
              </a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-6">
      {{{pagination pagination.page pagination.totalPages pagination.total}}}
    </div>
  {{else}}
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-12 text-center">
      <i class="fas fa-box-open text-gray-400 text-6xl mb-4"></i>
      <p class="text-gray-600 text-lg">No products found.</p>
    </div>
  {{/if}}
</div>

