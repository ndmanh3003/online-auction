<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-[36px] font-semibold text-gray-900">My Products</h1>
      <a
        href="/seller/products/create"
        class="px-6 py-3 bg-blue-600 text-white rounded-xl shadow-[0_4px_20px_rgba(37,99,235,0.3)] hover:bg-blue-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium"
      >
        Create Product
      </a>
    </div>
    <div class="flex gap-4">
      <a
        href="/seller/products"
        class="px-6 py-3 bg-white text-gray-900 border-b-2 border-blue-600 font-medium"
      >
        Active Products
      </a>
      <a
        href="/seller/products/ended"
        class="px-6 py-3 text-gray-600 hover:text-gray-900 border-b-2 border-transparent hover:border-gray-300 transition-colors font-medium"
      >
        Ended Auctions
      </a>
    </div>
  </div>
  {{#if items.length}}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      {{#each items}}
        {{> product-card}}
      {{/each}}
    </div>
    {{{pagination pagination.page pagination.totalPages pagination.total}}}
  {{else}}
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-12 text-center">
      <i class="fas fa-box text-gray-400 text-6xl mb-4"></i>
      <p class="text-gray-600 text-lg mb-4">You haven't posted any products yet.</p>
      <a
        href="/seller/products/create"
        class="inline-block px-6 py-3 bg-blue-600 text-white rounded-xl shadow-[0_4px_20px_rgba(37,99,235,0.3)] hover:bg-blue-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium"
      >
        Create Your First Product
      </a>
    </div>
  {{/if}}
</div>

