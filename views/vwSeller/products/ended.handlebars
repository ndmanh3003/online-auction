<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-[36px] font-semibold text-gray-900">Ended Auctions</h1>
  </div>
  {{#if items.length}}
    <div class="space-y-6 mb-8">
      {{#each items}}
        <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-6">
          <div class="flex gap-6">
            <img
              src="{{images.[0]}}"
              alt="{{name}}"
              class="w-32 h-32 object-cover rounded-2xl"
            />
            <div class="flex-1">
              <h3 class="text-gray-900 font-semibold text-xl mb-2">{{name}}</h3>
              <p class="text-gray-600 mb-4">{{categoryId.name}}</p>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <span class="text-gray-600 text-sm">Final Price:</span>
                  <p class="text-blue-600 font-bold text-2xl">${{format_currency currentPrice}}</p>
                </div>
                <div>
                  <span class="text-gray-600 text-sm">Ended On:</span>
                  <p class="text-gray-900 font-medium">{{formatDate endTime}}</p>
                </div>
              </div>
              {{#if winner}}
                <div class="mt-4 p-4 bg-green-50 rounded-2xl">
                  <p class="text-gray-900 font-medium mb-2">Winner: {{winner.name}}</p>
                  <div class="flex gap-4">
                    <a
                      href="/checkout/{{_id}}"
                      class="px-6 py-2 bg-green-600 text-white rounded-xl hover:bg-green-700 transition-colors font-medium text-sm"
                    >
                      View Transaction
                    </a>
                  </div>
                </div>
              {{else}}
                <div class="mt-4 p-4 bg-gray-50 rounded-2xl">
                  <p class="text-gray-600">No winner - auction ended without bids</p>
                </div>
              {{/if}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-6">
      {{{pagination pagination.page pagination.totalPages pagination.total}}}
    </div>
  {{else}}
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-12 text-center">
      <i class="fas fa-check-circle text-gray-400 text-6xl mb-4"></i>
      <p class="text-gray-600 text-lg">No ended auctions yet.</p>
    </div>
  {{/if}}
</div>

