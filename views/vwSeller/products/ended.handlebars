<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-[36px] font-semibold text-gray-900 mb-6">My Products</h1>
    <div class="flex gap-4">
      <a
        href="/seller/products"
        class="px-6 py-3 text-gray-600 hover:text-gray-900 border-b-2 border-transparent hover:border-gray-300 transition-colors font-medium"
      >
        Active Products
      </a>
      <a
        href="/seller/products/ended"
        class="px-6 py-3 bg-white text-gray-900 border-b-2 border-blue-600 font-medium"
      >
        Ended Auctions
      </a>
    </div>
  </div>
  {{#if items.length}}
    <div class="space-y-6 mb-8">
      {{#each items}}
        <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-6">
          <div class="flex gap-6">
            <img
              src="{{images.[0]}}"
              alt="{{name}}"
              class="w-32 h-32 object-cover rounded-2xl"
            />
            <div class="flex-1">
              <h3 class="text-gray-900 font-semibold text-xl mb-2">{{name}}</h3>
              <p class="text-gray-600 mb-4">{{categoryId.name}}</p>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <span class="text-gray-600 text-sm">Final Price:</span>
                  <p class="text-blue-600 font-bold text-2xl">${{format_currency currentPrice}}</p>
                </div>
                <div>
                  <span class="text-gray-600 text-sm">Ended On:</span>
                  <p class="text-gray-900 font-medium">{{formatDate endTime}}</p>
                </div>
              </div>
              {{#if winner}}
                <div class="mt-4 p-4 bg-green-50 rounded-2xl">
                  <p class="text-gray-900 font-medium mb-2">Winner: {{winner.name}}</p>
                  <p class="text-gray-600 text-sm mb-4">{{winner.email}}</p>
                  <div class="flex gap-4 mb-4">
                    <a
                      href="/checkout/{{_id}}"
                      class="px-6 py-2 bg-green-600 text-white rounded-xl hover:bg-green-700 transition-colors font-medium text-sm"
                    >
                      View Transaction
                    </a>
                    <a
                      href="/products/{{_id}}"
                      class="px-6 py-2 bg-white text-gray-900 border border-gray-200 rounded-xl hover:bg-gray-50 transition-colors font-medium text-sm"
                    >
                      View Product
                    </a>
                  </div>
                  {{#unless rated}}
                    <div class="border-t border-green-200 pt-4">
                      <h4 class="text-gray-900 font-medium mb-3">Rate Winner</h4>
                      <form
                        method="post"
                        action="/seller/products/rate/{{_id}}/{{winner._id}}"
                        class="space-y-3"
                      >
                        <div class="flex gap-3">
                          <label class="flex items-center cursor-pointer">
                            <input
                              type="radio"
                              name="rating"
                              value="1"
                              class="w-4 h-4 text-green-600"
                              required
                            />
                            <span class="ml-2 text-gray-900">üëç Positive (+1)</span>
                          </label>
                          <label class="flex items-center cursor-pointer">
                            <input
                              type="radio"
                              name="rating"
                              value="-1"
                              class="w-4 h-4 text-red-600"
                              required
                            />
                            <span class="ml-2 text-gray-900">üëé Negative (-1)</span>
                          </label>
                        </div>
                        <textarea
                          name="comment"
                          rows="2"
                          class="w-full px-4 py-3 border border-gray-200/60 rounded-xl focus:ring-2 focus:ring-black/10 focus:outline-none transition-all duration-300 text-gray-900 text-sm"
                          placeholder="Add a comment (optional)"
                        ></textarea>
                        <div class="flex gap-3">
                          <button
                            type="submit"
                            class="px-6 py-2 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition-colors font-medium text-sm"
                          >
                            Submit Rating
                          </button>
                          <button
                            type="button"
                            onclick="if(confirm('Cancel transaction? This will automatically give -1 rating with comment: Buyer did not complete payment')) { this.form.action='/seller/products/cancel/{{_id}}/{{winner._id}}'; this.form.submit(); }"
                            class="px-6 py-2 bg-red-600 text-white rounded-xl hover:bg-red-700 transition-colors font-medium text-sm"
                          >
                            Cancel Transaction
                          </button>
                        </div>
                      </form>
                    </div>
                  {{else}}
                    <div class="border-t border-green-200 pt-4">
                      <p class="text-green-700 text-sm">‚úì You have already rated this winner</p>
                    </div>
                  {{/unless}}
                </div>
              {{else}}
                <div class="mt-4 p-4 bg-gray-50 rounded-2xl">
                  <p class="text-gray-600">No winner - auction ended without bids</p>
                </div>
              {{/if}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-6">
      {{{pagination pagination.page pagination.totalPages pagination.total}}}
    </div>
  {{else}}
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-12 text-center">
      <i class="fas fa-check-circle text-gray-400 text-6xl mb-4"></i>
      <p class="text-gray-600 text-lg">No ended auctions yet.</p>
    </div>
  {{/if}}
</div>

