<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-[36px] font-semibold text-gray-900 mb-6">Search Products</h1>
    <form
      method="get"
      action="/search"
      class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-6"
    >
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="md:col-span-2">
          <input
            type="text"
            name="q"
            value="{{query}}"
            class="w-full px-4 py-4 border border-gray-200/60 rounded-2xl focus:ring-2 focus:ring-black/10 focus:outline-none transition-all duration-300 text-gray-900"
            placeholder="Search products..."
          />
        </div>
        <div>
          <select
            name="categoryId"
            class="w-full px-4 py-4 border border-gray-200/60 rounded-2xl focus:ring-2 focus:ring-black/10 focus:outline-none transition-all duration-300 text-gray-900 bg-white"
          >
            <option value="">All Categories</option>
            {{#each categories}}
              <option
                value="{{_id}}"
                {{#if (eq ../categoryId (toString _id))}}selected{{/if}}
              >
                {{name}}
              </option>
              {{#each subcategories}}
                <option
                  value="{{_id}}"
                  {{#if (eq ../../categoryId (toString _id))}}selected{{/if}}
                >
                  &nbsp;&nbsp;{{name}}
                </option>
              {{/each}}
            {{/each}}
          </select>
        </div>
        <div>
          <select
            name="sortBy"
            class="w-full px-4 py-4 border border-gray-200/60 rounded-2xl focus:ring-2 focus:ring-black/10 focus:outline-none transition-all duration-300 text-gray-900 bg-white"
          >
            <option value="" {{#unless sortBy}}selected{{/unless}}>Sort By: Newest</option>
            <option value="endTime_asc" {{#if (eq sortBy 'endTime_asc')}}selected{{/if}}>Ending Soon</option>
            <option value="currentPrice_asc" {{#if (eq sortBy 'currentPrice_asc')}}selected{{/if}}>Price: Low to High</option>
          </select>
        </div>
      </div>
      <div class="mt-4">
        <button
          type="submit"
          class="px-6 py-3 bg-blue-600 text-white rounded-xl shadow-[0_4px_20px_rgba(37,99,235,0.3)] hover:bg-blue-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium"
        >
          Search
        </button>
      </div>
    </form>
  </div>
  {{#if items.length}}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      {{#each items}}
        <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 overflow-hidden hover:scale-105 transition-all duration-300 ease-out {{#if isNew}}ring-2 ring-yellow-400{{/if}}">
          {{#if isNew}}
            <div class="bg-yellow-400 text-gray-900 text-xs font-bold px-3 py-1 text-center">
              NEW!
            </div>
          {{/if}}
          <a href="/products/{{_id}}">
            <img
              src="{{images.[0]}}"
              alt="{{name}}"
              class="w-full h-56 object-cover"
            />
          </a>
          <div class="p-6">
            <a href="/products/{{_id}}" class="block">
              <h3 class="text-gray-900 font-semibold text-lg mb-2 truncate">{{name}}</h3>
            </a>
            <a href="/search?categoryId={{categoryId._id}}" class="text-gray-600 text-sm hover:underline">
              {{categoryId.name}}
            </a>
            <div class="mt-4 space-y-2">
              <div class="flex justify-between items-center">
                <span class="text-gray-600 text-sm">Current Price:</span>
                <span class="text-blue-600 font-bold text-lg">${{format_currency currentPrice}}</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600 text-sm">Bids:</span>
                <span class="text-gray-900 font-medium">{{bidCount}}</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600 text-sm">Ends:</span>
                <span class="text-gray-900 font-medium">{{formatDate endTime}}</span>
              </div>
            </div>
            <div class="mt-4">
              <a
                href="/products/{{_id}}"
                class="block w-full text-center px-4 py-3 bg-blue-600 text-white rounded-xl shadow-[0_4px_20px_rgba(37,99,235,0.3)] hover:bg-blue-700 hover:scale-105 hover:shadow-lg transition-all duration-300 ease-out font-medium"
              >
                View Details
              </a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    {{{pagination pagination.page pagination.totalPages pagination.total}}}
  {{else}}
    <div class="bg-white rounded-3xl shadow-[0_4px_20px_rgba(0,0,0,0.08)] border border-gray-200/60 p-12 text-center">
      <i class="fas fa-search text-gray-400 text-6xl mb-4"></i>
      <p class="text-gray-600 text-lg">No products found matching your search.</p>
    </div>
  {{/if}}
</div>

